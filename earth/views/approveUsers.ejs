<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css for pagination below -->
    <link rel="stylesheet" href="assets/vendor/datatables/css/jquery.dataTables.min.css">
    <!-- css for filters below -->
    <link rel="stylesheet" href="assets/vendor/datatables/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/vendor/fonts/circular-std/style.css">
    <link rel="stylesheet" href="assets/libs/css/style.css">
    <!-- addedthisone -->
    <link rel="stylesheet" href="assets/libs/css/manageInput.css">
    <link rel="stylesheet" href="assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <link rel="stylesheet" href="assets/vendor/datatables/css/buttons.dataTables.min.css">

    <title>Approve Users</title>
    <link rel="icon" href="scale.png" type="image/x-icon">

</head>

<body>
    <!-- main wrapper -->
    <div class="dashboard-main-wrapper">
        <!-- navbar -->
        <%- include('includes/nav'); %>
        <!-- left sidebar -->
        <%- include('includes/leftSidebar'); %>

        <%- include('includes/scripts'); %>

        <!-- wrapper  -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- pageheader  -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#"
                                                    class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Approve Users</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end pageheader  -->

                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>email</th>
                                <th>role</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < users.length; i++) { %>
                                <tr>
                                    <td><%= users[i].email %></td>
                                    <td><%= users[i].role %></td>
                                    <td>
                                        <input type="button" class="approve btn btn-primary" id="approve" value="Approve"/>
                                        <input type="button" class="deny btn btn-secondary" id="deny" value="Deny"/>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <!-- Add Office Modal -->
                    <div id="approveModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="card-body">
                                <h1 style="color: red;">User Denied</h1>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Office Modal -->
                    <div id="denyModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="card-body">
                                <h1>User Approved</h1>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- footer -->
            <%- include('includes/footer'); %>
            <!-- end footer -->
        </div>
        <!-- end wrapper  -->
    </div>
    <!-- end main wrapper  -->

    <script>

        $(document).ready(function () {
            var t = $('#example').DataTable({

                columnDefs: [
                    { orderable: false, targets: 2 }
                ]
            });

            $('#example tbody').on('click', '.approve', function () {
                var denyModal = document.getElementById("denyModal");

                denyModal.style.display = "block";
            });
            $('#example tbody').on('click', '.deny', function () {
                var denyModal = document.getElementById("approveModal");

                denyModal.style.display = "block";


                t
                    .row($(this).parents('tr'))
                    .remove()
                    .draw();
            });

            var email,pass

            $("#logOut").click(function(){
                  email="";
                  pass="";
                  
                  $.post("/login",function(data){
                    //   if(data==='done') {
                          window.location.href="/logout"
                    //   }
                  })
              })

            // When the user clicks on <span> (x), close the modal
            document.getElementsByClassName("close")[0].onclick = function () {
                approveModal.style.display = "none";
            }
            document.getElementsByClassName("close")[1].onclick = function () {
                denyModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == approveModal) {
                    approveModal.style.display = "none";
                }
                if (event.target == denyModal) {
                    denyModal.style.display = "none";
                }
            }

        });

    </script>
</body>

</html>