<body>
    <!-- main wrapper -->
    <div class="dashboard-main-wrapper">
        <!-- navbar -->
        <%- include('includes/nav'); %>
        <!-- left sidebar -->
        <%- include('includes/leftSidebar'); %>

        <%- include('includes/scripts'); %>

        <!-- wrapper  -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- pageheader  -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#"
                                                    class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Approve Users</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end pageheader  -->

                    <table id="userTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>name</th>
                                <th>email</th>
                                <th>phone</th>
                                <th>role</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < users.length; i++) { %>
                                <tr>
                                    <td><%= users[i].name %></td>
                                    <td><%= users[i].email %></td>
                                    <td><%= users[i].phone %></td>
                                    <td><%= users[i].role %></td>
                                    <td>
                                        <input type="button" class="approve btn btn-primary" id="approve" value="Approve" onclick="approve('<%= users[i]._id %>')"/>
                                    </td>
                                    <td>
                                        <input type="button" class="deny btn btn-secondary" id="deny" value="Deny" onclick="deny('<%= users[i]._id %>')"/>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <!-- Add Office Modal -->
                    <div id="denyModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="card-body">
                                <h1 style="color: red;">User Denied</h1>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Office Modal -->
                    <div id="approveModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <div class="card-body">
                                <h1>User Approved</h1>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- footer -->
            <%- include('includes/footer'); %>
            <!-- end footer -->
        </div>
        <!-- end wrapper  -->
    </div>
    <!-- end main wrapper  -->

    <script>

        $(document).ready(function () {
            initDatatable()
            
            
