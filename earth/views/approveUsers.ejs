    <script>

        $(document).ready(function () {
            var t = $('#example').DataTable({

                columnDefs: [
                    {
                        targets: 6,
                        render: function (data, type, row, meta) {
                            return '<input type="button" class="approve btn btn-primary" id=approve"' + meta.row + '" value="Approve"/>  <input type="button" class="deny btn btn-secondary" id=deny"' + meta.row + '" value="Deny"/>';
                        }

                    },
                    { orderable: false, targets: 6 }
                ]
            });

            $('#example tbody').on('click', '.approve', function () {
                var denyModal = document.getElementById("denyModal");

                denyModal.style.display = "block";
            });
            $('#example tbody').on('click', '.deny', function () {
                var denyModal = document.getElementById("approveModal");

                denyModal.style.display = "block";
            });

            // When the user clicks on <span> (x), close the modal
            document.getElementsByClassName("close")[0].onclick = function () {
                approveModal.style.display = "none";
            }
            document.getElementsByClassName("close")[1].onclick = function () {
                denyModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == approveModal) {
                    approveModal.style.display = "none";
                }
                if (event.target == denyModal) {
                    denyModal.style.display = "none";
                }
            }

        });

    </script>
