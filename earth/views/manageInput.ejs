    <script>

        $(document).ready(function () {
            var t = $('#example').DataTable({

                columnDefs: [
                    {
                        targets: 6,
                        render: function (data, type, row, meta) {
                            return '<input type="button" class="edit" id=edit"' + meta.row + '" value="Edit"/>';
                        }

                    },
                    { orderable: false, targets: 6 }
                ],
                dom: 'Bfrtip',
                buttons: [
                    {
                        text: 'Add Office',
                        action: function (e, dt, node, config) {
                            addOfficeModal.style.display = "block";
                        }

                    }
                ]
            });

            $('#example tbody').on('click', '.edit', function () {
            var editOfficeModal = document.getElementById("editOfficeModal");
                var id = $(this).attr("id").match(/\d+/)[0];
                var data = t.row(id).data();
                // alert(data[0]);
                // alert(data);
                editOfficeModal.style.display = "block";
                
                document.getElementById("editOfficeName").value = data[0];
                document.getElementById("editOfficeAddress").value = data[1];
                document.getElementById("editOfficeCounty").value = data[2];
                document.getElementById("editOfficeEmail").value = data[3];
                document.getElementById("editOfficePhone").value = data[4];
                document.getElementById("editOfficeFax").value = data[5];

            });

            $('#addRow').on('click', function () {
                t.row.add([
                     document.getElementById("officeName").value,
                     document.getElementById("officeAddress").value,
                     document.getElementById("officeCounty").value,
                     document.getElementById("officeEmail").value,
                     document.getElementById("officePhone").value,
                     document.getElementById("officeFax").value
                ]).draw(false);

            });

            // When the user clicks on <span> (x), close the modal
            document.getElementsByClassName("close")[0].onclick = function () {
                addOfficeModal.style.display = "none";
            }
            document.getElementsByClassName("close")[1].onclick = function () {
                editOfficeModal.style.display = "none";
            }
            
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == addOfficeModal) {
                    addOfficeModal.style.display = "none";
                }
                if (event.target == editOfficeModal) {
                    editOfficeModal.style.display = "none";
                }
            }

        });

    </script>
